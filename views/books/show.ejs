<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="card mb-3 border-0 mx-auto mt-5" style="max-width: 850px">
            <div class="row g-0">
                <div class="col-md-4">
                    <div id="bookCarousel" class="carousel slide" data-bs-ride="true">
                        <div class="carousel-inner">
                            <% book.images.forEach((img, i)=> { %>
                                <div class="carousel-item <%= i===0 ? 'active' : '' %>">
                                    <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="">
                                </div>
                                <% }) %>
                        </div>
                        <% if(book.images.length> 1) { %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>
                                <% if(book.images.length===0) { %>
                                    <img crossorigin="anonymous" class="card-img-top"
                                        src="https://res.cloudinary.com/dxygupnug/image/upload/v1687009609/TheBookSpot/nifi4kcltxot2zwujgai.jpg"
                                        style="max-width: 200px; max-height: 300px;" alt="">
                                    <% } %>
                    </div>
                </div>
                <div class="col-md-8 p-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Name: <%= book.name %>
                        </li>
                        <li class="list-group-item">Author: <%= book.author %>
                        </li>
                        <li class="list-group-item"></li>
                    </ul>
                    <div class="card-body">
                        <h6 class="card-title">Description:</h6>
                        <p class="card-text">
                            <%= book.description %>
                        </p>
                        <h6 class="card-title">Price: $<%= book.price %>
                        </h6>
                        <p class="card-text"><small class="text-body-secondary">Category: <%= book.category %>
                            </small>
                        </p>
                        <button type="button" class="bi bi-cart-check-fill btn btn-primary"> Buy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container col-md-8">
        <% if (currentUser && currentUser.is_admin===1) { %>
            <div>
                <a href="/books/<%=book._id%>/edit" class="btn btn-warning">EDIT</a></p>
                <form action="/books/<%=book._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">DELETE</button>
                </form>
            </div>
            <% } %>
    </div>